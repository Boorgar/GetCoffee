<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:gravity="start" android:id="@+id/linearMyCart"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        style="@style/groupStylewhite_A700">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="16dp"
            android:elevation="4dp"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

            <ImageView
                android:id="@+id/toolbarBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_arrowdown"
                android:layout_gravity="start"
                android:padding="8dp"
                android:onClick="onBackButtonClicked"/>

            <!-- Center the title text in a TextView -->
            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="My cart"
                style="@style/txtPoppinsmedium22" />
        </androidx.appcompat.widget.Toolbar>

        <!-- TODO: Add RecyclerView here -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_14pxh">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerMyCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                itemSpace="@{@dimen/_35pxh}"
                tools:itemCount="3"
                tools:listitem="@layout/card_my_cart"/>

        </LinearLayout>





        <LinearLayout android:gravity="start"
            android:id="@+id/linearRowtotalprice"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_32pxv"
            android:layout_marginEnd="@dimen/_24pxh"
            android:layout_marginStart="@dimen/_24pxh"
            android:layout_marginTop="@dimen/_245pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <LinearLayout android:gravity="start"
                android:id="@+id/linearColumntotalprice"
                android:layout_height="wrap_content"
                android:layout_weight="0.48" android:layout_width="0dp" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="Total Price"
                    style="@style/txtPoppinsmedium12_2"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtTotalPrice"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="$ 3.00"
                    style="@style/txtPoppinssemibold22"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_weight="0.52" android:layout_width="0dp"
                android:orientation="horizontal" style="@style/groupStylebluegray_2">
                <ImageView
                    android:layout_height="@dimen/_18pxh"
                    android:layout_marginBottom="@dimen/_16pxv"
                    android:layout_marginStart="@dimen/_31pxh"
                    android:layout_marginTop="@dimen/_17pxv"
                    android:layout_width="@dimen/_18pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_cart_white_a700"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_cart_white_a700"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtCheckout"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_16pxv"
                    android:layout_marginEnd="@dimen/_28pxh"
                    android:layout_marginStart="@dimen/_14pxh"
                    android:layout_marginTop="@dimen/_14pxv"
                    android:layout_weight="0.79"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="Checkout"
                    style="@style/txtPoppinssemibold14"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
