<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout android:gravity="start"
        android:id="@+id/linearRowmugcoffeepngone"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_24pxh"
        android:layout_marginStart="@dimen/_24pxh"
        android:layout_marginTop="@dimen/_19pxv"
        android:layout_width="match_parent"
        android:orientation="horizontal" style="@style/groupStylegray_51cornerRadius">
        <ImageView android:id="@+id/imageMugcoffeePNGOne"
            android:layout_height="@dimen/_61pxh"
            android:layout_marginBottom="@dimen/_17pxv"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_18pxv"
            android:layout_width="@dimen/_82pxh"
            android:scaleType="fitXY"
            android:src="@drawable/img_americano"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearColumnamericano"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_16pxv"
            android:layout_marginEnd="@dimen/_11pxh"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_weight="0.72" android:layout_width="0dp" android:orientation="vertical">
            <TextView android:ellipsize="end"
                android:id="@+id/txtCoffeeName"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginStart="@dimen/_1pxh"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="Americano"
                style="@style/txtPoppinsmedium12_1"/>
            <LinearLayout android:id="@+id/linearRowsingleiced"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_width="match_parent" android:orientation="horizontal">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtDesc"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_4pxv"
                    android:layout_marginTop="@dimen/_4pxv"
                    android:layout_weight="0.77"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:text="single | iced | medium | full ice"
                    style="@style/txtPoppinslight10"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtPrice"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20pxh"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:text="$3.00"
                    style="@style/txtPoppinsmedium16_1"/>
            </LinearLayout>
            <TextView android:ellipsize="end"
                android:id="@+id/txtXCounter"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_2pxv"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="x1"
                style="@style/txtPoppinssemibold12"/>
        </LinearLayout>
    </LinearLayout>

<!--    Redundant code-->
    <FrameLayout
        android:id="@+id/frameStackdelete"
        style="@style/groupStyledeep_orange_50cornerRadius"
        android:layout_width="@dimen/_48pxh"
        android:layout_height="@dimen/_96pxv"
        android:layout_marginStart="@dimen/_11pxh"
        android:layout_marginBottom="@dimen/_1pxv"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageDelete"
            android:layout_width="@dimen/_18pxh"
            android:layout_height="@dimen/_20pxh"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_15pxh"
            android:layout_marginTop="@dimen/_38pxv"
            android:layout_marginEnd="@dimen/_14pxh"
            android:layout_marginBottom="@dimen/_38pxv"
            android:scaleType="fitXY"
            android:src="@drawable/img_delete" />
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>