<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:gravity="start"
                android:orientation="horizontal">

                <TextView
                    android:id ="@+id/txtOrderDate"
                    style="@style/txtPoppinsmedium10_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_9pxv"
                    android:layout_weight="0.67"
                    android:ellipsize="end"
                    android:text="24 June | 12:30" />

                <TextView
                    android:id = "@+id/txtOrderPrice"
                    style="@style/txtPoppinsmedium16_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_163pxh"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_weight="0.33"
                    android:ellipsize="end"
                    android:text="$3.00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_1pxh"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_13pxh"
                            android:layout_height="@dimen/_13pxh"
                            android:layout_marginTop="@dimen/_2pxv"
                            android:layout_marginBottom="@dimen/_8pxv"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_coffee_cup"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:layout_width="@dimen/_13pxh"
                            android:layout_height="@dimen/_13pxh"
                            android:layout_marginTop="@dimen/_2pxv"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_location"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtOrderName"
                        style="@style/txtPoppinsmedium10_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8pxh"
                        android:layout_weight="0.85"
                        android:ellipsize="end"
                        android:text="Americano" />

                    <TextView
                        android:id="@+id/txtOrderAddress"
                        style="@style/etPoppinsmedium10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:text="3 Newbridge Court, Chino Hills, CA 91709, United States"
                        tools:ignore="Autofill" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</FrameLayout>
