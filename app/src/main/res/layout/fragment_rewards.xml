<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout android:id="@+id/linearColumnline"
        style="@style/groupStylewhite_A700"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_25pxh"
        android:layout_marginTop="@dimen/_23pxv"
        android:layout_marginEnd="@dimen/_15pxh"
        android:layout_marginBottom="@dimen/_21pxv"
        android:gravity="center_horizontal" android:orientation="vertical">
        <LinearLayout android:id="@+id/linearRewards"
            style="@style/groupStylewhite_A700"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:orientation="vertical">
            <LinearLayout android:id="@+id/linearColumntitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" android:orientation="vertical">
                <TextView android:id="@+id/txtTitle"
                    style="@style/txtPoppinsmedium16_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_128pxh"
                    android:layout_marginEnd="@dimen/_128pxh"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/_8pxh"
                    android:singleLine="true"
                    android:text="Rewards"/>
                <LinearLayout android:id="@+id/linearColumnloyaltycard"
                    style="@style/groupStylebluegray_800cornerRadius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_25pxv"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:gravity="center_horizontal" android:orientation="vertical">
                    <LinearLayout android:id="@+id/linearRowloyaltycard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_23pxh"
                        android:layout_marginTop="@dimen/_13pxv"
                        android:layout_marginEnd="@dimen/_23pxh" android:orientation="horizontal">
                        <TextView android:id="@+id/txtLoyaltycard"
                            style="@style/txtPoppinsmedium14"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2pxv"
                            android:layout_weight="0.72"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="Loyalty card"/>
                        <TextView android:id="@+id/txtFortyEight"
                            style="@style/txtPoppinsmedium14"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_143pxh"
                            android:layout_marginBottom="@dimen/_2pxv"
                            android:layout_weight="0.28"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="4/8"/>
                    </LinearLayout>
                    <FrameLayout android:id="@+id/frameStackgroup7011"
                        style="@style/groupStylewhite_A700cornerRadius"
                        android:layout_width="@dimen/_279pxh"
                        android:layout_height="@dimen/_61pxv"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_23pxh"
                        android:layout_marginTop="@dimen/_7pxv"
                        android:layout_marginEnd="@dimen/_23pxh" android:layout_marginBottom="@dimen/_17pxv">
                        <ImageView android:id="@+id/imageGroup7011"
                            android:layout_width="@dimen/_245pxh"
                            android:layout_height="@dimen/_30pxh"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_16pxh"
                            android:layout_marginTop="@dimen/_15pxv"
                            android:layout_marginEnd="@dimen/_17pxh"
                            android:layout_marginBottom="@dimen/_16pxv"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_group7011"
                            tools:ignore="ContentDescription"/>
                    </FrameLayout>
                </LinearLayout>
                <FrameLayout android:id="@+id/frameStackmypoints"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_131pxv"
                    android:layout_marginTop="@dimen/_16pxv" android:gravity="start">
                    <LinearLayout android:id="@+id/linearRowmypoints"
                        style="@style/groupStylebluegray_800cornerRadius"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:layout_marginBottom="@dimen/_10pxv" android:orientation="horizontal">
                        <LinearLayout android:id="@+id/linearColumnmypoints"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_30pxh"
                            android:layout_marginTop="@dimen/_25pxv"
                            android:layout_marginBottom="@dimen/_25pxv"
                            android:layout_weight="0.66"
                            android:gravity="start" android:orientation="vertical">
                            <TextView android:id="@+id/txtMyPoints"
                                style="@style/txtPoppinsmedium14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_10pxh"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="My Points:"/>
                            <TextView android:id="@+id/txtZipcode"
                                style="@style/txtPoppinsmedium24"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_10pxh"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="2048"/>
                        </LinearLayout>

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/viewRectangle2595"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:text="Redeem"/>
                    </LinearLayout>
                    <ImageView android:id="@+id/imageGlobe"
                        android:layout_width="@dimen/_66pxh"
                        android:layout_height="@dimen/_65pxh"
                        android:layout_gravity="bottom|end"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_marginTop="@dimen/_10pxv"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription" />
                </FrameLayout>
                <TextView android:id="@+id/txtHistoryRewards"
                    style="@style/txtPoppinsmedium14_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_6pxh"
                    android:layout_marginTop="@dimen/_7pxv"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="History Rewards"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerRewards"
                itemSpace="@{@dimen/_35pxh}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6pxh"
                android:layout_marginTop="@dimen/_15pxv"
                android:layout_marginEnd="@dimen/_19pxh"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        </LinearLayout>
    </LinearLayout>
</layout>
